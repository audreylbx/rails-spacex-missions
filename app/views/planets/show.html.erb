<div class="container">

  <h1>Exploration time âœ¨</h1>
  <% if @planet.photos.any? %>
  <%= cl_image_tag @planet.photos.first.path, width: 100, height: 100, crop: :fill, radius: :max, :class=>"planet-image" %>
  <% end %>

  <div class="mission-list">
    <h2>Here are the next missions to explore planet <%= @planet.name %>:</h2>
    <% if @planet.missions.any? %>
      <ol>
        <% @planet.missions.each do |mission| %>
          <li><%= mission.description %> with <%= mission.spaceshift.name %> | <%= link_to "Delete", planet_mission_path(@planet, mission), method: :delete, data: {confirm: "Are you sure you want to delete this mission?"} %></li>
        <% end %>
      </ol>
    <% else %>
      <p>There are no missions yet !</p>
    <% end %>
  </div>

  <div class="form">
    <p>ðŸš€ Add a new mission</p>
    <%= render 'missions/form_mission' %>
  </div>

  <div class="form">
    <p>ðŸ“¸ Upload a picture for this planet</p>
    <%= render 'form_picture' %>
  </div>

</div>
